@page
@model sql_web_app.Models.Reports.ReportModel
@{
    ViewData["Title"] = "Панель управления";
    ViewData["Subtitle"] = "Поддержка";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
	    	<div class="card">
	    		<div class="card-header">
	    			<div class="d-flex align-items-center justify-content-between">
	          	        <h3 class="card-title">Проблемы</h3>
                        <a href="/Reports/Create" class="btn btn-block btn-outline-primary col-1">Добавить</a>
    				</div>
                </div>
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Номер</th>
                            <th>Клиент</th>
                            <th>Тип проблемы</th>
                            <th>Сотрудник</th>
                            <th>Статус</th>
                            <th>Редактировать</th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (string[] item in Model.Rows)
                            {
                                <tr>
                                <td>@item[0]</td>
                                <td>@item[1]</td>
                                <td>@item[2]</td>
                                <td>@item[3]</td>
                                @if (@item[4].Equals("0"))
                                {
                                    <td>В процессе решения</td>
                                }
                                else
                                {
                                    <td>Решено</td>
                                }
                                <td>
                                    <a href="/Reports/Edit/@item[0]"><i class="fas fa-edit"></i></a>
                                    <!--<button type="button" class="btn btn-block btn-default"><i class="fas fa-edit"></i></button>-->
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
	    	</div>
	    </div>
	</div>
</div>