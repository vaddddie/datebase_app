@page
@model sql_web_app.Models.Employees.EmployeeModel
@{
    ViewData["Title"] = "Панель управления";
    ViewData["Subtitle"] = "Персонал";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
	    	<div class="card">
	    		<div class="card-header">
	    			<div class="d-flex align-items-center justify-content-between">
	          	        <h3 class="card-title">Сотрудники</h3>
                        <a href="/Employees/Create" class="btn btn-block btn-outline-primary col-1">Добавить</a>
    				</div>
                </div>
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Номер</th>
                            <th>Должность</th>
                            <th>Почта</th>
                            <th>Полное имя</th>
                            <th>Пароль</th>
                            <th>Рейтинг</th>
                            <th>Редактировать</th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (string[] item in Model.Rows)
                            {
                                <tr>
                                <td>@item[0]</td>
                                <td>@item[1]</td>
                                <td>@item[2]</td>
                                <td>@item[3]</td>
                                <td>@item[4]</td>
                                <td>@item[5]</td>
                                <td>
                                    <a href="/Employees/Edit/@item[0]"><button type="button" class="btn btn-block btn-default"><i class="fas fa-edit"></i></button></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
	    	</div>
	    </div>
	</div>
</div>