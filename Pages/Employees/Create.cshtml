@page
@model sql_web_app.Models.Employees.EmployeeCreateModel
@{
    ViewData["Title"] = "Панель управления";
    ViewData["Subtitle"] = "";
}

<form method="post">
	<div class="container-fluid">
        <div class="col-6 mx-auto">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Добавить нового сотрудника</h3>
                </div>

            <!-- card-body /. -->
                <div class="card-body">
                    <div class="form-group">
                        <label>Должность</label>
                        <select required class="custom-select" name="jobTitle_id">
                            <option selected disabled hidden value="">Выберете должность сотрудника</option>
                            @foreach (int idx in Model.JobTitles.Keys)
                            {
                                <option value="@idx">@Model.JobTitles[idx]</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="email">Почта</label>
                        <input required type="email" name="email" class="form-control" id="email" placeholder="Введите почту">
                    </div>
                    <div class="form-group">
                        <label for="fullname">Полное имя</label>
                        <input required type="text" name="fullname" class="form-control" id="fullname" placeholder="Введите полное имя">
                    </div>
                    <div class="form-group">
                        <label for="password">Пароль</label>
                        <input required type="text" name="password" class="form-control" id="password" placeholder="Введите пароль">
                    </div>
                    <div class="form-group">
                        <label for="rate">Рейтинг</label>
                        <input required type="number" name="rate" class="form-control" id="rate" placeholder="Введите рейтинг сотрудника">
                    </div>
                    <div id="errorBlock"></div>
                </div>
            <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Добавить</button>
                </div>
            </div>
        </div>
    </div>
</form>